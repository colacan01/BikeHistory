<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeHistory.Mobile.Views.Auth.RegisterPage"
             xmlns:viewmodel="clr-namespace:BikeHistory.Mobile.ViewModels"
             x:DataType="viewmodel:RegisterViewModel"
             Title="회원가입">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20">

            <Image Grid.Row="0" 
                   Source="logo.png"
                   HeightRequest="80"
                   HorizontalOptions="Center"
                   Margin="0,30,0,20" />

            <VerticalStackLayout Grid.Row="1"
                                Spacing="15"
                                VerticalOptions="Center"
                                Margin="0,10,0,0">

                <Label Text="회원가입"
                       FontSize="28"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       Margin="0,0,0,20" />

                <Entry Placeholder="이메일" 
                       Text="{Binding Email}"
                       Keyboard="Email" />

                <Entry Placeholder="비밀번호" 
                       Text="{Binding Password}"
                       IsPassword="True" />

                <Entry Placeholder="비밀번호 확인" 
                       Text="{Binding ConfirmPassword}"
                       IsPassword="True" />

                <Entry Placeholder="이름" 
                       Text="{Binding FirstName}" />

                <Entry Placeholder="성" 
                       Text="{Binding LastName}" />

                <Button Text="회원가입"
                        Command="{Binding RegisterCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                        Margin="0,20,0,0" />

                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                       HorizontalOptions="Center" />

                <Label Text="{Binding SuccessMessage}"
                       TextColor="Green"
                       IsVisible="{Binding SuccessMessage, Converter={StaticResource StringToBoolConverter}}"
                       HorizontalOptions="Center" />

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                  IsVisible="{Binding IsBusy}"
                                  HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Button Grid.Row="2"
                    Text="이미 계정이 있으신가요? 로그인"
                    Command="{Binding GoToLoginCommand}"
                    Style="{StaticResource TextButton}"
                    HorizontalOptions="Center"
                    Margin="0,0,0,20" />
        </Grid>
    </ScrollView>
</ContentPage>