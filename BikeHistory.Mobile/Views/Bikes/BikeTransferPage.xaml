<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeHistory.Mobile.Views.Bikes.BikeTransferPage"
             xmlns:viewmodel="clr-namespace:BikeHistory.Mobile.ViewModels"
             x:DataType="viewmodel:BikeTransferViewModel"
             Title="소유권 이전">

    <Grid RowDefinitions="Auto,*,Auto" 
          Padding="20">
        
        <ActivityIndicator Grid.Row="0"
                          IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15">
                <Label Text="소유권 이전"
                      FontSize="24"
                      FontAttributes="Bold"
                      HorizontalOptions="Center"
                      Margin="0,10,0,20" />
                
                <!-- 자전거 정보 요약 -->
                <Frame BorderColor="LightGray"
                      Padding="15"
                      Margin="0,0,0,20">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="{Binding Bike.FrameNumber}"
                                  FontSize="18"
                                  FontAttributes="Bold" />
                            
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Bike.Brand.Name}" />
                                        <Span Text=" " />
                                        <Span Text="{Binding Bike.Model}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            
                            <Label Text="{Binding Bike.Manufacturer.Name}"
                                  TextColor="Gray" />
                        </VerticalStackLayout>
                        
                        <Image Grid.Column="1"
                              Source="bike.png"
                              HeightRequest="50"
                              WidthRequest="50"
                              VerticalOptions="Center" />
                    </Grid>
                </Frame>
                
                <!-- 이전 정보 입력 -->
                <Label Text="새 소유자 ID *" 
                      FontAttributes="Bold" />
                <Entry Text="{Binding NewOwnerId}"
                      Placeholder="새 소유자의 ID를 입력하세요" />
                
                <Label Text="메모" 
                      FontAttributes="Bold"
                      Margin="0,10,0,0" />
                <Editor Text="{Binding Notes}"
                      Placeholder="소유권 이전 관련 메모를 입력하세요 (선택사항)"
                      HeightRequest="100" />
                
                <!-- 주의사항 -->
                <Frame BackgroundColor="LightYellow"
                      BorderColor="Orange"
                      Padding="10"
                      Margin="0,10,0,10">
                    <VerticalStackLayout>
                        <Label Text="주의사항"
                              FontAttributes="Bold"
                              TextColor="DarkOrange" />
                        <Label Text="소유권을 이전하면 이 자전거에 대한 소유권이 새 사용자에게 넘어갑니다. 이 작업은 되돌릴 수 없습니다."
                              TextColor="DarkOrange"
                              FontSize="14" />
                    </VerticalStackLayout>
                </Frame>
                
                <!-- 오류/성공 메시지 -->
                <Label Text="{Binding ErrorMessage}"
                      TextColor="Red"
                      IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                      HorizontalOptions="Center"
                      Margin="0,10,0,0" />
                
                <Label Text="{Binding SuccessMessage}"
                      TextColor="Green"
                      IsVisible="{Binding SuccessMessage, Converter={StaticResource StringToBoolConverter}}"
                      HorizontalOptions="Center"
                      Margin="0,10,0,0" />
                
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                 IsVisible="{Binding IsBusy}"
                                 HorizontalOptions="Center"
                                 Margin="0,10,0,0" />
            </VerticalStackLayout>
        </ScrollView>
        
        <Grid Grid.Row="2"
             ColumnDefinitions="*,*"
             Margin="0,10,0,0">
            <Button Grid.Column="0"
                  Text="취소"
                  Command="{Binding CancelCommand}"
                  BackgroundColor="LightGray"
                  TextColor="Black"
                  Margin="0,0,5,0" />
            
            <Button Grid.Column="1"
                  Text="이전 확인"
                  Command="{Binding TransferOwnershipCommand}"
                  IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                  BackgroundColor="Red"
                  TextColor="White"
                  Margin="5,0,0,0" />
        </Grid>
    </Grid>
</ContentPage>