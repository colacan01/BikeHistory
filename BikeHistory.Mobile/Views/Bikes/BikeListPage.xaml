<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeHistory.Mobile.Views.Bikes.BikeListPage"
             xmlns:viewmodel="clr-namespace:BikeHistory.Mobile.ViewModels"
             xmlns:model="clr-namespace:BikeHistory.Mobile.Models"
             x:DataType="viewmodel:BikeListViewModel"
             Title="내 자전거 목록"
             BackgroundColor="{StaticResource Gray100}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="추가" Command="{Binding AddNewBikeCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FontAwesome" 
                    Glyph="&#xf067;" 
                    Size="18" 
                    Color="{StaticResource Primary}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Text="로그아웃" Command="{Binding LogoutCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="FontAwesome" 
                    Glyph="&#xf2f5;" 
                    Size="18" 
                    Color="{StaticResource Primary}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="*,Auto" 
          Padding="16">
        
        <RefreshView Grid.Row="0"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            
            <CollectionView ItemsSource="{Binding Bikes}"
                          SelectionMode="None"
                          ItemSizingStrategy="MeasureAllItems">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" 
                               HorizontalOptions="Center"
                               Padding="32">
                        <!-- Material Design Empty State -->
                        <Frame BackgroundColor="{StaticResource Gray200}"
                               CornerRadius="60"
                               HeightRequest="120"
                               WidthRequest="120"
                               HasShadow="False"
                               HorizontalOptions="Center"
                               Padding="0">
                            <Label HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontFamily="FontAwesome"
                                   Text="&#xf206;"
                                   FontSize="48"
                                   TextColor="{StaticResource Gray400}" />
                        </Frame>
                        
                        <Label Text="자전거가 없습니다"
                               FontSize="24" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}"
                               Margin="0,24,0,8" />
                        <Label Text="첫 번째 자전거를 등록하여 시작해보세요"
                               FontSize="16" 
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray500}"
                               Margin="0,0,0,32" />
                        
                        <Button Text="자전거 등록하기"
                                Command="{Binding AddNewBikeCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="24"
                                HeightRequest="48"
                                WidthRequest="200"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:BikeFrame">
                        <SwipeView Margin="0,8">
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="상세보기"
                                             BackgroundColor="{StaticResource Primary}"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BikeListViewModel}}, Path=BikeSelectedCommand}"
                                             CommandParameter="{Binding .}">
                                        <SwipeItem.IconImageSource>
                                            <FontImageSource FontFamily="FontAwesome" 
                                                Glyph="&#xf06e;" 
                                                Size="20" 
                                                Color="White" />
                                        </SwipeItem.IconImageSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <!-- Material Design Card -->
                            <Frame BackgroundColor="White"
                                   CornerRadius="12"
                                   HasShadow="True"
                                   Padding="0"
                                   Margin="0">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BikeListViewModel}}, Path=BikeSelectedCommand}"
                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                      RowDefinitions="*"
                                      Padding="20">
                                    
                                    <!-- Bike Type Icon -->
                                    <Frame Grid.Column="0"
                                           BackgroundColor="{StaticResource Primary}"
                                           CornerRadius="24"
                                           HeightRequest="48"
                                           WidthRequest="48"
                                           HasShadow="False"
                                           Padding="0"
                                           VerticalOptions="Start"
                                           Margin="0,0,16,0">
                                        <Label HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontFamily="FontAwesome"
                                               Text="&#xf206;"
                                               FontSize="20"
                                               TextColor="White" />
                                    </Frame>
                                    
                                    <!-- Bike Details -->
                                    <VerticalStackLayout Grid.Column="1"
                                                       Spacing="4">
                                        <!-- Manufacturer and Model -->
                                        <Label FontSize="18" 
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource Gray900}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Manufacturer.Name}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Model}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        
                                        <!-- Frame Number and Brand -->
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf02d;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}"
                                                   VerticalOptions="Center" />
                                            <Label FontSize="14"
                                                   TextColor="{StaticResource Gray600}"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding FrameNumber}" />
                                                        <Span Text=" • " />
                                                        <Span Text="{Binding Brand.Name}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </StackLayout>
                                        
                                        <!-- Bike Type -->
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf02c;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray500}"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding BikeType.Name}"
                                                   FontSize="14"
                                                   TextColor="{StaticResource Gray600}"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                        
                                        <!-- Registration Date -->
                                        <StackLayout Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf073;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray400}"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding RegisteredDate, StringFormat='{0:yyyy년 MM월 dd일 등록}'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource Gray400}"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                    </VerticalStackLayout>
                                    
                                    <!-- Action Arrow -->
                                    <Label Grid.Column="2"
                                           FontFamily="FontAwesome"
                                           Text="&#xf054;"
                                           FontSize="16"
                                           TextColor="{StaticResource Gray400}"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center" />
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="0"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"
                          Color="{StaticResource Primary}"
                          Scale="1.5" />
        
        <!-- Error Message -->
        <Frame Grid.Row="0"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
               BackgroundColor="#FFEBEE"
               BorderColor="#F44336"
               CornerRadius="8"
               Margin="16"
               Padding="16"
               VerticalOptions="Center"
               HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Spacing="12">
                <Label FontFamily="FontAwesome"
                       Text="&#xf071;"
                       FontSize="20"
                       TextColor="#F44336"
                       VerticalOptions="Center" />
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#C62828"
                       VerticalOptions="Center"
                       HorizontalOptions="FillAndExpand"
                       LineBreakMode="WordWrap" />
            </StackLayout>
        </Frame>
        
        <!-- Floating Action Button -->
        <Frame Grid.Row="1"
               BackgroundColor="{StaticResource Primary}"
               CornerRadius="28"
               HeightRequest="56"
               WidthRequest="56"
               HasShadow="True"
               Padding="0"
               HorizontalOptions="End"
               VerticalOptions="End"
               Margin="0,16,0,0">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddNewBikeCommand}" />
            </Frame.GestureRecognizers>
            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontFamily="FontAwesome"
                   Text="&#xf067;"
                   FontSize="24"
                   TextColor="White" />
        </Frame>
    </Grid>
</ContentPage>