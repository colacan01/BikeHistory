<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeHistory.Mobile.Views.Bikes.BikeListPage"
             xmlns:viewmodel="clr-namespace:BikeHistory.Mobile.ViewModels"
             xmlns:model="clr-namespace:BikeHistory.Mobile.Models"
             x:DataType="viewmodel:BikeListViewModel"
             Title="내 자전거 목록"
             BackgroundColor="{StaticResource BackgroundLight}">

    <!-- Remove Toolbar Items as per requirements -->

    <Grid RowDefinitions="*,Auto" 
          Padding="0">
        
        <!-- Profile Menu Overlay -->
        <Frame Grid.Row="0"
               Grid.RowSpan="2"
               IsVisible="{Binding IsProfileMenuVisible}"
               BackgroundColor="Transparent"
               BorderColor="Transparent"
               HasShadow="False"
               Padding="0"
               ZIndex="1000">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding HideMenusCommand}" />
            </Frame.GestureRecognizers>
            
            <!-- Profile Menu -->
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="0"
                   WidthRequest="160"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   Margin="16,0,16,0">
                
                <StackLayout Spacing="0">
                    <!-- Profile Menu Item -->
                    <Grid Padding="16,12" BackgroundColor="Transparent">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Profile Icon -->
                        <Ellipse Grid.Column="0"
                                 Stroke="{StaticResource TextSecondary}"
                                 StrokeThickness="1.5"
                                 WidthRequest="16"
                                 HeightRequest="16"
                                 VerticalOptions="Center" />
                        <Path Grid.Column="0"
                              Data="M8 12 C 8 10, 12 10, 12 12 Z"
                              Stroke="{StaticResource TextSecondary}"
                              StrokeThickness="1.5"
                              VerticalOptions="Center"
                              HorizontalOptions="Center" />
                        
                        <Label Grid.Column="1"
                               Text="프로파일"
                               FontSize="14"
                               TextColor="{StaticResource TextPrimary}"
                               VerticalOptions="Center"
                               Margin="8,0,0,0" />
                    </Grid>
                    
                    <!-- Logout Menu Item -->
                    <Grid Padding="16,12" BackgroundColor="Transparent">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}" />
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Logout Icon -->
                        <Label Grid.Column="0"
                               FontFamily="FontAwesome"
                               Text="&#xf2f5;"
                               FontSize="16"
                               TextColor="{StaticResource TextSecondary}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                        
                        <Label Grid.Column="1"
                               Text="로그아웃"
                               FontSize="14"
                               TextColor="{StaticResource TextPrimary}"
                               VerticalOptions="Center"
                               Margin="8,0,0,0" />
                    </Grid>
                </StackLayout>
            </Frame>
        </Frame>

        <!-- Bike Menu Bottom Sheet -->
        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              x:Name="BikeMenuBottomSheet"
              IsVisible="{Binding IsBikeMenuVisible}"
              BackgroundColor="{StaticResource ScrimTrans}"
              ZIndex="999">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding HideMenusCommand}" />
            </Grid.GestureRecognizers>
            
            <!-- Bottom Sheet -->
            <Frame BackgroundColor="{StaticResource MenuBackground}"
                   BorderColor="{StaticResource MenuBackground}"
                   CornerRadius="0"
                   HasShadow="True"
                   Padding="0"
                   VerticalOptions="End"
                   HorizontalOptions="FillAndExpand"                   
                   Margin="0">
                
                <StackLayout Spacing="0">
                    <!-- Drag Handle -->
                    <BoxView BackgroundColor="{StaticResource MenuSeparator}"
                             CornerRadius="2.5"
                             WidthRequest="40"
                             HeightRequest="5"
                             HorizontalOptions="Center"
                             Margin="0,12,0,24" />
                    
                    <!-- Menu Items -->
                    <StackLayout Spacing="0" Padding="32,0">
                        <!-- QR Code -->
                        <Grid Padding="0,12" BackgroundColor="Transparent">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GenerateQRCodeCommand}" />
                            </Grid.GestureRecognizers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   FontFamily="FontAwesome"
                                   Text="&#xf029;"
                                   FontSize="16"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center" />
                            
                            <Label Grid.Column="1"
                                   Text="QR 코드 생성"
                                   FontSize="14"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center"
                                   Margin="16,0,0,0" />
                        </Grid>
                        
                        <!-- Edit Info -->
                        <Grid Padding="0,12" BackgroundColor="Transparent" Margin="0,12,0,0">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding EditBikeInfoCommand}" />
                            </Grid.GestureRecognizers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   FontFamily="FontAwesome"
                                   Text="&#xf044;"
                                   FontSize="16"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center" />
                            
                            <Label Grid.Column="1"
                                   Text="정보수정"
                                   FontSize="14"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center"
                                   Margin="16,0,0,0" />
                        </Grid>
                        
                        <!-- Maintenance History -->
                        <Grid Padding="0,12" BackgroundColor="Transparent" Margin="0,12,0,0">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding AddMaintenanceRecordCommand}" />
                            </Grid.GestureRecognizers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   FontFamily="FontAwesome"
                                   Text="&#xf0ad;"
                                   FontSize="16"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center" />
                            
                            <Label Grid.Column="1"
                                   Text="정비이력 입력"
                                   FontSize="14"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center"
                                   Margin="16,0,0,0" />
                        </Grid>
                        
                        <!-- Separator -->
                        <BoxView BackgroundColor="{StaticResource MenuSeparator}"
                                 HeightRequest="1"
                                 HorizontalOptions="FillAndExpand"
                                 Margin="0,12,0,0" />
                        
                        <!-- Transfer Ownership -->
                        <Grid Padding="0,12" BackgroundColor="Transparent" Margin="0,12,0,20">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TransferOwnershipCommand}" />
                            </Grid.GestureRecognizers>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="24" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   FontFamily="FontAwesome"
                                   Text="&#xf0ec;"
                                   FontSize="16"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center" />
                            
                            <Label Grid.Column="1"
                                   Text="소유권 이전"
                                   FontSize="14"
                                   TextColor="{StaticResource TextOnDark}"
                                   VerticalOptions="Center"
                                   Margin="16,0,0,0" />
                        </Grid>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </Grid>

        <!-- Main Content -->
        <RefreshView Grid.Row="0"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}"
                     Margin="16,0">
            
            <CollectionView ItemsSource="{Binding Bikes}"
                          SelectionMode="None"
                          ItemSizingStrategy="MeasureAllItems">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" 
                               HorizontalOptions="Center"
                               Padding="32">
                        <!-- Material Design Empty State -->
                        <Frame BackgroundColor="{StaticResource Gray200}"
                               CornerRadius="60"
                               HeightRequest="120"
                               WidthRequest="120"
                               HasShadow="False"
                               HorizontalOptions="Center"
                               Padding="0">
                            <Label HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   FontFamily="FontAwesome"
                                   Text="&#xf206;"
                                   FontSize="48"
                                   TextColor="{StaticResource Gray400}" />
                        </Frame>
                        
                        <Label Text="자전거가 없습니다"
                               FontSize="24" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Gray600}"
                               Margin="0,24,0,8" />
                        <Label Text="첫 번째 자전거를 등록하여 시작해보세요"
                               FontSize="16" 
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               TextColor="{StaticResource Gray500}"
                               Margin="0,0,0,32" />
                        
                        <Button Text="자전거 등록하기"
                                Command="{Binding AddNewBikeCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="24"
                                HeightRequest="48"
                                WidthRequest="200"
                                HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:BikeFrame">
                        <SwipeView Margin="0,8">
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="상세보기"
                                             BackgroundColor="{StaticResource Primary}"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BikeListViewModel}}, Path=BikeSelectedCommand}"
                                             CommandParameter="{Binding .}">
                                        <SwipeItem.IconImageSource>
                                            <FontImageSource FontFamily="FontAwesome" 
                                                Glyph="&#xf06e;" 
                                                Size="20" 
                                                Color="White" />
                                        </SwipeItem.IconImageSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <!-- Enhanced Material Design Card -->
                            <Frame BackgroundColor="{StaticResource CardBackground}"
                                   CornerRadius="16"
                                   HasShadow="True"
                                   Padding="0"
                                   Margin="0">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BikeListViewModel}}, Path=BikeSelectedCommand}"
                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                      RowDefinitions="120"
                                      Padding="20">
                                    
                                    <!-- Bike Type Icon -->
                                    <Frame Grid.Column="0"
                                           BackgroundColor="{StaticResource PrimaryLight}"
                                           CornerRadius="24"
                                           HeightRequest="48"
                                           WidthRequest="48"
                                           HasShadow="False"
                                           Padding="0"
                                           VerticalOptions="Start"
                                           Margin="0,0,16,0">
                                        <Label HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontFamily="FontAwesome"
                                               Text="&#xf206;"
                                               FontSize="20"
                                               TextColor="{StaticResource Primary}" />
                                    </Frame>
                                    
                                    <!-- Bike Details -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="4">
                                        <!-- Manufacturer and Model -->
                                        <Label FontSize="18" 
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               TextColor="{StaticResource TextPrimary}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Manufacturer.Name}" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Model}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        
                                        <!-- Frame Number and Brand -->
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf02d;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   VerticalOptions="Center" />
                                            <Label FontSize="14"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   VerticalOptions="Center"
                                                   LineBreakMode="TailTruncation">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding FrameNumber}" />
                                                        <Span Text=" • " />
                                                        <Span Text="{Binding Brand.Name}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </StackLayout>
                                        
                                        <!-- Bike Type -->
                                        <StackLayout Orientation="Horizontal" Spacing="8">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf02c;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding BikeType.Name}"
                                                   FontSize="14"
                                                   TextColor="{StaticResource TextSecondary}"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                        
                                        <!-- Registration Date -->
                                        <StackLayout Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                            <Label FontFamily="FontAwesome"
                                                   Text="&#xf073;"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextTertiary}"
                                                   VerticalOptions="Center" />
                                            <Label Text="{Binding RegisteredDate, StringFormat='{0:yyyy년 MM월 dd일 등록}'}"
                                                   FontSize="12"
                                                   TextColor="{StaticResource TextTertiary}"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                    </VerticalStackLayout>
                                    
                                    <!-- More Options Menu Button -->
                                    <StackLayout Grid.Column="2"
                                               VerticalOptions="Start"
                                               HorizontalOptions="Center"
                                               Spacing="2"
                                               Padding="8">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:BikeListViewModel}}, Path=ShowBikeMenuCommand}"
                                                CommandParameter="{Binding .}" />
                                        </StackLayout.GestureRecognizers>
                                        <Ellipse Fill="{StaticResource TextSecondary}"
                                                 WidthRequest="4"
                                                 HeightRequest="4" />
                                        <Ellipse Fill="{StaticResource TextSecondary}"
                                                 WidthRequest="4"
                                                 HeightRequest="4" />
                                        <Ellipse Fill="{StaticResource TextSecondary}"
                                                 WidthRequest="4"
                                                 HeightRequest="4" />
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="0"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center"
                          Color="{StaticResource Primary}"
                          Scale="1.5" />
        
        <!-- Error Message -->
        <Frame Grid.Row="0"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
               BackgroundColor="#FFEBEE"
               BorderColor="#F44336"
               CornerRadius="8"
               Margin="16"
               Padding="16"
               VerticalOptions="Center"
               HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" Spacing="12">
                <Label FontFamily="FontAwesome"
                       Text="&#xf071;"
                       FontSize="20"
                       TextColor="#F44336"
                       VerticalOptions="Center" />
                <Label Text="{Binding ErrorMessage}"
                       TextColor="#C62828"
                       VerticalOptions="Center"
                       HorizontalOptions="FillAndExpand"
                       LineBreakMode="WordWrap" />
            </StackLayout>
        </Frame>
        
        <!-- Enhanced Floating Action Button -->
        <Frame Grid.Row="1"
               BackgroundColor="{StaticResource PrimaryLight}"
               CornerRadius="28"
               HeightRequest="56"
               WidthRequest="56"
               HasShadow="True"
               Padding="0"
               HorizontalOptions="End"
               VerticalOptions="End"
               Margin="16">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddNewBikeCommand}" />
            </Frame.GestureRecognizers>
            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontFamily="FontAwesome"
                   Text="&#xf067;"
                   FontSize="24"
                   TextColor="{StaticResource PrimaryDark}" />
        </Frame>
    </Grid>
</ContentPage>